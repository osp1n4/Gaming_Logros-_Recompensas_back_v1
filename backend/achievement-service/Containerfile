FROM node:20-alpine

WORKDIR /app

# Install netcat for wait-for-it script
RUN apk add --no-cache netcat-openbsd

COPY package*.json ./
RUN npm install

COPY tsconfig.json ./
COPY src ./src
COPY wait-for-it.sh ./

RUN npm run build
RUN chmod +x wait-for-it.sh

EXPOSE 3002

CMD ["sh", "-c", "./wait-for-it.sh ${RABBITMQ_HOST:-rabbitmq} ${RABBITMQ_PORT:-5672} npm start"]
