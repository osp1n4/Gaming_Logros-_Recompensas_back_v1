FROM node:20-alpine

WORKDIR /app

# Install netcat for wait-for-it script
RUN apk add --no-cache netcat-openbsd

COPY package*.json ./
RUN npm install

COPY tsconfig.json ./
COPY src ./src
COPY wait-for-it.sh ./

# Make script executable and fix line endings
RUN chmod +x wait-for-it.sh && \
    dos2unix wait-for-it.sh || sed -i 's/\r$//' wait-for-it.sh

RUN npm run build

EXPOSE 3003

CMD ["sh", "-c", "./wait-for-it.sh ${RABBITMQ_HOST:-rabbitmq} ${RABBITMQ_PORT:-5672} -- npm start"]
